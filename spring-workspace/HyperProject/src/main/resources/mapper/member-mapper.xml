<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <!-- <mapper namespace="memberMapper"> -->
  <mapper namespace="com.kh.hyper.api.model.dao.CommentMapper">
  
  <select id="getComment" parameterType="Long" resultType="com.kh.hyper.api.model.dto.CommentDTO">
  	SELECT
  	       UC_SEQ foodNo,
  	       WRITER writer,
  	       CONTENT content
  	  FROM
  	       TB_FOOD_REPLY
  	WHERE
  	       UC_SEQ = #{foodNo}
  	 ORDER
  	    BY
  	       CONTENT DESC
  </select>
  	
  </mapper>